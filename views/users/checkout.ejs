                      else if (data.success) {
                        window.location.href = "/orderPlaced";
                      } else if (data.success === false) {
                        razorpayPayment(data.orders,data.orderId);
                      }
                    })
                    .catch((error) => {
                      console.log(error, "error nd");
                    });

