        <script>
            document.addEventListener("DOMContentLoaded", function() {
                // Get all dropdown items
                var dropdownItems = document.querySelectorAll("#statusDropdown .dropdown-item");
                
                // Loop through each dropdown item and attach event listener
                dropdownItems.forEach(function(item) {
                    item.addEventListener("click", function() {
                        var orderId = document.getElementById("statusDropdown").getAttribute("data-orderid");
                        var selectedStatus = this.getAttribute("data-status");
                        
                        handleChange(orderId, selectedStatus);
                    });
                });
            });
        
            function handleChange(orderId, selectedStatus) {
                var formData = {
                    orderId: orderId,
                    status: selectedStatus
                };
        
                fetch('/updateOrderStatus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData),
                })
                .then(response => response.json())
                .then(data => {
                    window.location.reload()
                    // Handle success response
                })
                .catch(error => {
                    console.error('Error:', error);
                    // Handle error
                });
            }
