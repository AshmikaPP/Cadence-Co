        <script>
            function deleteImage(event, image, Id) {
                event.preventDefault();
                $.ajax({
                    url: "/deleteimage",
                    method: "DELETE",
                    data: {
                        image,
                        Id
                    },
                    success:(response)=>{
                        if(response.success){
                            window.location.reload()
                        }
                    }
                });
               
            }
        </script>
      <script>
        function validateForm() {
            const name = document.getElementById('name').value.trim();
            const description = document.getElementById('description').value.trim();
            const price = document.getElementById('price').value.trim();
            const stock = document.getElementById('stock').value.trim();
            const imageFiles = document.getElementById('image').files;
         
    
            // Check if any field contains a space
            if (name.includes(' ')) {
                document.getElementById('nameError').innerText = "Name cannot contain spaces.";
                return false;
            } else {
                document.getElementById('nameError').innerText = "";
            }
    
            if (description.includes(' ')) {
                document.getElementById('descriptionError').innerText = "Description cannot contain spaces.";
                return false;
            } else {
                document.getElementById('descriptionError').innerText = "";
            }
    
            if (price.includes(' ')) {
                document.getElementById('priceError').innerText = "Price cannot contain spaces.";
                return false;
            } else {
                document.getElementById('priceError').innerText = "";
            }
    
            if (stock.includes(' ')) {
                document.getElementById('stockError').innerText = "Stock cannot contain spaces.";
                return false;
            } else {
                document.getElementById('stockError').innerText = "";
            }
    
            // Validate if at least one image is selected
            if (imageFiles.length === 0) {
                document.getElementById('imageError').innerText = "Please select at least one image.";
                return false;
            } else {
                document.getElementById('imageError').innerText = "";
            }
    
            return true; // Form is valid
        }
    </script>
    
